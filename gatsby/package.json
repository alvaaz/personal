{
  "name": "using-typescript",
  "version": "1.0.0",
  "description": "Gatsby example site demonstrating how to use TypeScript with Gatsby",
  "author": "fabien0102 <fabien0102@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run develop",
    "develop": "cross-env NODE_OPTIONS=\"-r esm\" gatsby develop",
    "build": "cross-env NODE_OPTIONS=\"-r esm\" gatsby build",
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx"
  },
  "sideEffects": false,
  "dependencies": {
    "dotenv": "^8.2.0",
    "gatsby": "^2.24.85",
    "gatsby-image": "^2.4.21",
    "gatsby-plugin-postcss": "^3.0.3",
    "gatsby-plugin-prefetch-google-fonts": "^1.4.3",
    "gatsby-source-sanity": "^6.0.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "tailwindcss": "^1.9.6"
  },
  "devDependencies": {
    "@types/node": "^12.12.11",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "cross-env": "^7.0.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "esm": "^3.2.25",
    "postcss": "^8.1.4",
    "postcss-nested": "^5.0.1",
    "prettier": "2.1.1",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
