{
  "name": "goede.cl",
  "version": "1.0.0",
  "description": "Portafolio de Álvaro Göede",
  "author": "alvaaz <alvaro@goede.cl>",
  "license": "MIT",
  "scripts": {
    "start": "npm run develop",
    "develop": "cross-env NODE_OPTIONS=\"-r esm\" gatsby develop",
    "build": "cross-env NODE_OPTIONS=\"-r esm\" gatsby build",
    "serve": "cross-env NODE_OPTIONS=\"-r esm\" gatsby serve",
    "format": "prettier --write \"**/*.{js,jsx,json,md,ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx"
  },
  "sideEffects": false,
  "dependencies": {
    "@types/react-helmet": "^6.1.1",
    "dotenv": "^8.2.0",
    "gatsby": "^3.3.0",
    "gatsby-plugin-google-fonts": "^1.0.1",
    "gatsby-plugin-image": "^1.3.0",
    "gatsby-plugin-postcss": "^4.3.0",
    "gatsby-plugin-react-helmet": "^4.3.0",
    "gatsby-plugin-sanity-image": "^0.6.0",
    "gatsby-source-filesystem": "^3.3.0",
    "gatsby-source-sanity": "^7.0.3",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.1.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.2",
    "esm": "^3.2.25",
    "gatsby-plugin-sharp": "^3.3.0",
    "gatsby-transformer-sharp": "^3.3.0",
    "isomorphic-fetch": "^3.0.0",
    "postcss": "^8.2.10",
    "postcss-nested": "^5.0.5",
    "prettier": "2.2.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
